{
    "extends": "@coloragent/typescript-config/tsconfig.web.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "rootDir": ".",
        "outDir": "./dist-web",
        "resolveJsonModule": true,
        "paths": {
            "@ui/*": ["./src/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "index.d.ts",
        "global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "babel.config.cjs",
        "metro.config.cjs",
        "tsup.config.*.ts",
        "**/*.js",
        "./dist-*",
        "./build"
    ]
}
