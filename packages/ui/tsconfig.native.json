{
    "extends": "@coloragent/typescript-config/tsconfig.native.json",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "./dist-native",
        "resolveJsonModule": true,
        "paths": {
            "@ui/*": ["./src/*"]
        }
    },
    "include": [
        "index.d.ts",
        "global.d.ts",
        "exports.native.ts",
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts"
    ],
    "exclude": ["./dist", "./build", "node_modules", "*.cjs", "*.mjs"]
}
