{
    "extends": "@coloragent/typescript-config/tsconfig.react-native.json",
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "tsconfig.native.tsbuildinfo",
        "baseUrl": "./src",
        "rootDir": ".",
        "outDir": "./dist-native",
        "paths": {
            "@ui/*": ["src/*"]
        }
    },
    "include": ["index.d.ts", "*.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["dist-*", "build", "node_modules", "*.cjs", "*.mjs", "**/*.web.ts", "**/*.web.tsx"]
}
