{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "ColorAgent",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "preserve",
        "moduleDetection": "force",
        "moduleResolution": "bundler",
        "noEmit": true,
        "target": "ESNext"
    },
    "exclude": [
        "dist",
        "build",
        "node_modules",
        "babel.config.js",
        "metro.config.cjs",
        "jest.config.js"
    ]
}
