{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "ColorAgent",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "jsx": "react-native",
        "jsxImportSource": "react",
        "lib": ["DOM", "ESNext"],
        "module": "preserve",
        "moduleDetection": "force",
        "moduleResolution": "bundler",
        "customConditions": ["react-native"],
        "noEmit": true,
        "target": "ESNext"
    },
    "exclude": ["dist", "build", "node_modules", "babel.config.js", "metro.config.cjs", "jest.config.js"]
}
